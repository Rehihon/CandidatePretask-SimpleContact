@model SimpleContact.Models.EmailDataModel
@{
    ViewData["Title"] = "Home Page - Contact";
}

<div class="row">
    <div class="col-12 text-center">
        <h1 class="display-4">Optoma Pretask</h1>
        
        <p>Below is the optoma pretask.   This is a very basic contact form that would send an email to optoma.</p>
        <p>Please can you complete the implementation of the below form.</p>
        @if (ViewBag.Error != null)
        {
            <h3 style="color:red">@ViewBag.Error</h3>
        }
    </div>
</div>
<div class="row justify-content-center text-center">
    <div class="col-8">
        <form asp-action="Index" method="post">
            <div class="form-group mb-2">
                <label for="Name">Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class= "form-control" })
            </div>
            <div class="form-group mb-2">
                <label for="Email">Email</label>
                @Html.TextBoxFor(m=>m.Email,new { @class= "form-control" })
            </div>
            <div class="form-group mb-2"> 
                <label for="Message">Mesage</label>
                @Html.TextAreaFor(m=>m.Message,new { @class= "form-control" })
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-primary" value="Send">
            </div>
        </form>
    </div>
</div>